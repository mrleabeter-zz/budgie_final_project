<div id="nav-bar">

  <img id="nav-logo" src="" alt="Budgie Logo">

  <% if current_user %>
    
    <div id="logged-in-container">
      <%= current_user.username %>: <%= link_to "Log out", logout_path %>
    </div>

    <div id="nav-buttons-container">
      <a href="/companies"><button class="nav-button">Companies</button></a>

      <a href="/messages"><button class="nav-button">Messages</button></a>

      <a href="/users/<%= current_user.id %>"><button>Profile</button></a>
    </div>
    
  <% else %>

    <div id="sign-in-container">
      <%= form_tag sessions_path do %>
        <%= text_field_tag 'email', nil, placeholder: 'email' %>
        <%= password_field_tag 'password', nil, placeholder: 'password' %>
        <%= submit_tag "Log In" %>
      <% end %>
    </div>

  <% end %>

</div>