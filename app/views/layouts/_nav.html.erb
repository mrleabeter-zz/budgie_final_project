<div id="nav-bar">

  <img id="nav-logo" src="http://s20.postimg.org/sg83uhd5p/budgielogo.png" alt="Budgie Logo">

  <% if current_user %>
    
    <div id="logged-in-container" style="color: white">
      Hello, <%= current_user.username %> <%= link_to "log out", logout_path, class: 'logout_link' %>
    </div>
    <div id="nav-buttons-container">
      <a href="/users/<%= current_user.id %>/favorites"><button type="button" class="btn btn-custom btn-sm">Favorites</button></a>
      <a href="/messages"><button type="button" class="btn btn-custom btn-sm">Messages</button></a>
      <a href="/users/<%= current_user.id %>"><button type="button" class="btn btn-custom btn-sm">Profile</button></a>
    </div>
    
  <% else %>

    <div id="sign-in-container">
      <%= form_tag sessions_path do %>
        <%= text_field_tag 'email', nil, placeholder: 'email' %>
        <%= password_field_tag 'password', nil, placeholder: 'password' %>
        <%= submit_tag "Log In", class: "btn btn-custom btn-sm" %>
      <% end %>
    </div>

  <% end %>

</div>